<nav class="navbar navbar-expand-sm mb-3 sticky-nav p-0" style="background-color: rgba(255, 255, 255, 0.55);">
    <div class="container-fluid">
      <span class="navbar-brand">Select Category</span>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <button class="nav-link">Realtime</button>
          </li>
          <li class="nav-item">
            <button class="nav-link">High</button>

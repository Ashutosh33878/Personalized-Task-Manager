<div class="d-flex flex-column bg-color-3 m-3">
    <span class="fs-5 fw-semibold p-3 bg-color-2 color-4">To-do List</span>
    <div style="height: fit-content; overflow-y: scroll;">
        <form>
            <ul class="list-group">
                <% tasksList.forEach((task) => { %>
                    <div class="list-group-item py-3 lh-sm">
                        <input type="checkbox">
                        <label>
                            <%= task %>
                        </label>
                    </div>
                <% }) %>
            </ul>
        </form>
    </div>
</div>
